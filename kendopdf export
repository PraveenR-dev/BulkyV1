$("#exportToPDF").click(function () {
  const grid = $("#grid").data("kendoGrid");
  const htmlRows = preparePDFData(); // Generate rows dynamically

  // Wrap the rows in a table with headers
  const customHTML = `
    <div class="pdf-header" style="text-align: center; margin-bottom: 20px;">
      <h3>Exported Grid Data</h3>
    </div>
    <table border="1" style="width: 100%; border-collapse: collapse;">
      <thead>
        <tr>
          <th style="padding: 8px; text-align: left;">Page Name</th>
          <th style="padding: 8px; text-align: left;">Username</th>
          <th style="padding: 8px; text-align: left;">Page URL</th>
          <th style="padding: 8px; text-align: left;">Access Date</th>
          <th style="padding: 8px; text-align: left;">Last Access Time</th>
          <th style="padding: 8px; text-align: left;">Count</th>
        </tr>
      </thead>
      <tbody>
        ${htmlRows}
      </tbody>
    </table>
  `;

  // Use kendo.drawing.drawDOM for custom PDF generation
  kendo.drawing
    .drawDOM($("<div>").append(customHTML), {
      paperSize: "A4",
      margin: { top: "1cm", bottom: "1cm", left: "1cm", right: "1cm" },
      landscape: true,
    })
    .then(function (group) {
      kendo.drawing.pdf.saveAs(group, "GridExport.pdf");
    });
});

