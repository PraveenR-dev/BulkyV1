    <input type="text" id="customSearchBox" class="k-textbox" 
           placeholder="Search..." style="padding-left: 30px; width: 200px;" />
    <span class="k-icon k-i-search" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%);"></span>
</div>

