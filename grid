/* Add a border and consistent styling for the export buttons */
.export-button {
    border: 1px solid #ddd; /* Light border */
    padding: 5px 15px; /* Adjust button padding */
    border-radius: 5px; /* Rounded corners */
    background-color: #fff; /* White background */
    cursor: pointer;
}

.export-button:hover {
    background-color: #f5f5f5; /* Light grey on hover */
    border-color: #ccc; /* Darker border on hover */
}

/* Styling for the search icon inside the search box */
.search-container {
    position: relative;
}

.search-container .k-icon {
    color: #aaa; /* Light grey icon color */
    font-size: 14px;
}
